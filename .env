# Bluesky Account Credentials
# Be sure to use an App Password for increased security.
BLUESKY_HANDLE="PLACEHOLDER"
BLUESKY_APP_PASSWORD="PLACEHOLDER"

# OpenRouter API Key
# This is required to use the OpenRouter service for AI interactions.
OPENROUTER_API_KEY="PLACEHOLDER"

# AI Model to use from OpenRouter
# You can change this to any model supported by OpenRouter.
MODEL_NAME="google/gemini-2.5-flash"

# Bot Behavior and Rate Limiting
# The interval (in seconds) at which the bot will check for new mentions.
MENTION_CHECK_INTERVAL_SECONDS=30

# The maximum number of consecutive replies the bot will make in a single thread
# to avoid getting into long, spammy conversations.
CONVERSATION_STREAK_LIMIT=10

# The number of recent messages to fetch from the database to use as conversation context.
MAX_HISTORY_MESSAGES=10
